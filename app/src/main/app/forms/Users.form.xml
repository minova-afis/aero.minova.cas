<?xml version="1.0" encoding="UTF-8"?>
<form icon="User" title="@User" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
helper-class="aero.minova.cas.app.helper.CASUsersHelper"
	xsi:noNamespaceSchemaLocation="../../../../../../ch.minova.install/src/ch/minova/install/xsd/XMLForm.xsd">
	<index-view id="IndexView" source="xvcasUsersIndex" index-report="auto">
		<column name="KeyLong" key="true" visible="false">
			<number/>
		</column>
		<column name="Username" text="@xtcasUsers.Username">
			<text length="50"/>
		</column>
		<column name="Password" text="@xtcasUsers.Password">
			<text length="100"/>
		</column>
	</index-view>
	<detail id="Detail" procedure-prefix="xpcas" procedure-suffix="Users">
		<head>
			<field name="KeyLong" key-type="primary" sql-index="0" visible="false">
				<number/>
			</field>
			<field name="Username" sql-index="1" text="@xtcasUsers.Username" required="true" key-type="user">
				<text length="50"/>
			</field>
			<field name="Password" sql-index="2" text="@xtcasUsers.Password" number-columns-spanned="4" required="true" fill="toright">
				<text length="100"/>
			</field>
		</head>
	</detail>
</form>